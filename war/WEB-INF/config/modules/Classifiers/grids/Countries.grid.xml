<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"

        name="Countries" viewName="Countries" caption="=countries"
        maxColumnWidth="300" newRowWindow="modal" editWindow="modal"
    >
  <g:columns>
    <DataColumn name="Name" minWidth="100" visible="true" />
    <DataColumn name="Code" />
    <DataColumn name="EUMember" caption="=countryEUMemberShort" />

    <CalcColumn type="string" name="Flag" source="Code" cellType="html" width="30" caption="-"
                label="=countryFlag" sortable="false" horizontalAlignment="center" filterOptions="-"
                exportWidthFactor="0.5">
      <renderer type="flag" />
    </CalcColumn>
  </g:columns>
</g:Grid>
