<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY MARGIN "margin-right: 1em;">
  <!ENTITY ROW_STYLE "margin-bottom: 1ex;">
  <!ENTITY lbl1 "width: 110px; padding-right: 9px; text-align: right;">
  <!ENTITY lbl2 "width: 75px; padding-right: 9px; text-align: right;">
  <!ENTITY inp1 "width: 100px;">
]>
<FlowPanel xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:d="http://www.butent.com/decorator"
  style="padding-top: 5px;"
  class="flexBox-vertical">
  <Table style="border-spacing: 5px;">
    <row>
	  <Label text="=vehicleNumber" class="bee-required" horizontalAlignment="right" style="&lbl1;"/>
	  <InputText source="Number"  upperCase="true" d:size="70" d:unit="px" d:align="right" d:rootStyle="&MARGIN;" />
	  <Label text="=vehicleModel" class="bee-required" horizontalAlignment="right" style="&lbl1; "/>
	  <DataSelector source="Model" class="flexible" newRowForm="NewVehicleModel"
		renderColumns="ParentModelName ModelName" decorator="flex-left" d:size="50" d:rootStyle="&MARGIN;"
		filter="parent" style="&inp1;"/>
	  <Label text="=vehicleType" class="bee-required" horizontalAlignment="right" style="&lbl2;"/>
	  <DataSelector source="Type" renderColumns="TypeName" class="flexible" decorator="flex-left" d:size="40" d:rootStyle="&MARGIN;" />
	  <Label module="Transport" for="Group" text="=groups" class="bee-required" horizontalAlignment="right" style="&lbl2;"/>
	  <ChildSelector module="Transport" viewName="TransportGroups" childTable="VehicleGroups"
        required="true" label="=groups" renderColumns="Name" style="width: 155px;"
        targetRelColumn="Vehicle" sourceRelColumn="Group" newRowEnabled="false" />
	</row>
	<row>
	  <Label text="=vehicleOwnerName" horizontalAlignment="right" style="&lbl1;"/>
	  <DataSelector source="Owner" decorator="flex-left" d:size="70" d:rootStyle="&MARGIN;" />
	  <Label text="=vehicleProductionDate" horizontalAlignment="right" style="&lbl1;"/>
	  <InputDate source="ProductionDate" style="&inp1;" />
	  <Label text="=notes" horizontalAlignment="right" style="&lbl2;"/>
      <SimplePanel style="position: relative; min-width: 5em;" class="flexible">
        <InputArea source="Notes" class="occupy-1" style="width: 155px; height: 95px;"/>
      </SimplePanel>
	</row>
	<row>
      <Label text="=vehicleBodyNumber" horizontalAlignment="right" style="&lbl1;"/>
	  <InputText source="BodyNumber" decorator="flex-left" d:size="70" d:rootStyle="&MARGIN;" style="width: 155px;"/>
	  <Label text="=vehicleNetto" horizontalAlignment="right" style="&lbl1;"/>
      <InputInteger source="Netto" style="&inp1;" d:rootStyle="&MARGIN;" />
	</row>
	<row>
	  <Label text="=vehicleBrutto" horizontalAlignment="right" style="&lbl1;"/>
	  <InputInteger source="Brutto" style="width: 155px" />
	  <Label text="=vehicleEngineNumber" horizontalAlignment="right" style="&lbl1;"/>
	  <InputInteger source="EngineNumber" decorator="flex-left" d:size="70" d:rootStyle="&MARGIN;" style="&inp1;"/>
	</row>
	<row>
	  <Label text="=vehiclePower" horizontalAlignment="right" style="&lbl1;"/>
	  <InputText source="Power" style="width: 155px" d:rootStyle="&MARGIN;" />
	  <Label text="=vehicleEngineVolume" horizontalAlignment="right" style="&lbl1;"/>
	  <InputInteger source="EngineVolume" style="&inp1;" />
	</row>
</Table> 
</FlowPanel>
