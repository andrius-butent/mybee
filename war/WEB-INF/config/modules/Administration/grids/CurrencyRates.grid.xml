<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
      xmlns:ui="http://www.butent.com/ui"
  
  name="CurrencyRates" viewName="CurrencyRates" caption="=currencyRates"
  >
  <g:columns>
    <DataColumn name="Date" source="Date" visible="true" minWidth="100" />
    <DataColumn name="Quantity" source="Quantity" visible="true" carry="true" minWidth="80" />

    <DataColumn name="Rate" source="Rate" visible="true" minWidth="200" format="#.###############" />
    <CalcColumn name="Inverse" type="double" label="=currencyRateInverse" minWidth="140"
      format="#.##########">
      <render><ui:expression>(row.Rate > 0) ? 1 / row.Rate : 0</ui:expression></render>
    </CalcColumn>
  </g:columns>
</g:Grid>
