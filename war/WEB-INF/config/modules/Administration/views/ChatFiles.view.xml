<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="ChatFiles" source="ChatFiles" module="*"
  caption="=chatFiles"
  >
  <Columns>
    <SimpleColumn name="ChatMessage" />

    <SimpleColumn name="File" />
    <SimpleJoin name="File" joinType="LEFT">
      <SimpleColumn name="Hash" />
      <SimpleColumn name="Name" alias="FileName" />
      <SimpleColumn name="Size" alias="FileSize" />
      <SimpleColumn name="Type" alias="FileType" />
    </SimpleJoin>

    <SimpleColumn name="Caption" />
  </Columns>
  <Order>
    <OrderBy column="File" />
  </Order>
</View>
