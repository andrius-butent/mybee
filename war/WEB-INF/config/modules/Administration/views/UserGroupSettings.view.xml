<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="UserGroupSettings" source="UserGroupSettings" module="Administration"
  caption="=userGroups" newRowCaption="=newUserGroup"
  editForm="UserGroup" newRowForm="UserGroup"
  >
  <Columns>
    <SimpleColumn name="Name" />
    <SimpleColumn name="Owner" />
    <SimpleColumn name="TaskExecutor" />
    <SimpleJoin name="TaskExecutor" joinType="LEFT">
      <SimpleColumn name="CompanyPerson" alias="ExecutorPerson" />
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn alias="ExecutorFirstName" name="FirstName" />
          <SimpleColumn alias="ExecutorLastName" name="LastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <SimpleColumn name="Visibility" />
    <SimpleColumn name="Notes" />
  </Columns>

  <Order>
    <OrderBy column="Visibility" />
    <OrderBy column="Name" />
  </Order>
</View>
 