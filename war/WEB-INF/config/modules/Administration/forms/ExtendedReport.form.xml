<?xml version="1.0" encoding="UTF-8" ?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="ExtendedReport"
  >
  <FlowPanel class="flexBox-vertical">
    <br/>
    <FlowPanel class="flexBox-horizontal">
      <FlowPanel class="flexible">
        <HorizontalPanel>
          <Label text="=currency" />
          <UnboundSelector name="Currency" viewName="Currencies" renderColumns="Name"
            newRowEnabled="false" editPopup="true" style="width:80px;" />
    
          <CheckBox name="Vat" text="=trdAmountWoVat" />
        </HorizontalPanel>
        
        <Disclosure open="false">
          <Label text="=layout" />
          <FlowPanel name="LayoutContainer" style="overflow:auto;" />
        </Disclosure>
    
        <Disclosure open="true">
          <Label text="=filters" />
          <FlowPanel style="overflow:auto;">
            <FlowPanel name="FilterContainer" style="max-height:150px; overflow:auto;" />
            <FaLabel name="FilterContainerAdd" char="plus" style="display:inline-block;" />
          </FlowPanel>
        </Disclosure>
      </FlowPanel>

      <FieldSet>
        <Legend text="=reports" />
        <FlowPanel name="ReportContainer" style="max-height:300px; overflow:auto;" />
      </FieldSet>
    </FlowPanel>

    <br/>
    <FlowPanel name="DataContainer" class="flexible" style="overflow:auto;" />
  </FlowPanel>
</f:Form>
