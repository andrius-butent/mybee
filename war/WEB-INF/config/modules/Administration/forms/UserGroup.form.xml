<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="UserGroup" viewName="UserGroupSettings" caption="=userGroup"
  width="500" height="300"
  >
  <FlowPanel class="flexBox-vertical">
    <Table style="border-spacing: 10px;">
      <row>
        <Label text="=name" class="bee-required" />
        <InputText source="Name" style="width: 200px;" />
        <Radio source="Visibility" />
      </row>

      <row>
        <Label text="=crmTaskExecutor" />
        <DataSelector name="TaskExecutor" source="TaskExecutor" for="TaskExecutor"  style="width: 200px;" />
        <cell verticalAlignment="top">
          <Label text="=notes" />
        </cell>
        <InputArea source="Notes" style="width: 200px; height: 60px;" />
      </row>
    </Table>

    <br/>
    <ChildGrid class="flexible" name="UserGroupMembers" relColumn="Group" />
      
  </FlowPanel>
</f:Form>  
