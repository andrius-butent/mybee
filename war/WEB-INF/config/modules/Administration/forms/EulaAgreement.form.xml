<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>=eulaAgreement</title>
    <style>
      .box {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-around;
      }
      button[type=submit] {
      padding: 5px;
      background-color: #1eb2d8;
      color: white;
      font-weight: bold;
      border: 1px solid transparent;
      border-radius: 4px;
      box-sizing: border-box;
      cursor: pointer;
      text-transform: uppercase;
      }
      button[type=submit]:hover {
      background-color: #1ca5c7;
      }
    </style>
  </head>
  <body>
    <div class="box" style="height:90vh;">
      <iframe id="mainFrame" style="width:60vw; height:80vh;"> </iframe>
    </div>
    <div class="box">
      <div>
        <form method="post" style="display:inline-block;">
          <input name="EulaAgreement" type="hidden" value="accept" />
          <button type="submit">=accept</button>
        </form>
        <form method="post" style="display:inline-block;">
          <input name="EulaAgreement" type="hidden" value="decline" />
          <button type="submit">=decline</button>
        </form>
      </div>
    </div>
  </body>
</html>