    <Relation name="User" relation="Users" notNull="true"
              unique="true" cascade="DELETE" label="=user" />

    <Enum name="Locale" key="SupportedLocale" label="=userLocale" />
    <Enum name="DateFormat" key="SupportedLocale" label="=dateFormat" />

    <Boolean name="MailAssignedTasks" label="=crmMailAssignedTasks" />
    <Boolean name="MailNewDiscussions" label="=discussMailNewDiscussions" />
    <Boolean name="MailNewAnnouncements" label="=discussMailNewAnnouncements" />

    <Boolean name="OpenInNewTab" label="=openInNewTab" />

    <Boolean name="WorkspaceContinue" label="=workspaceContinue" />
    <Boolean name="CommentsLayout" />
    <Text name="LastWorkspace" />

    <Integer name="ClickSensitivityMillis" label="=clickSensitivityMillis" />
    <Integer name="ClickSensitivityDistance" label="=clickSensitivityDistance" />

    <Integer name="ActionSensitivityMillis" label="=actionSensitivityMillis" />

    <Integer name="CompanyActionRemindBefore" label="=calMailPlannedActions" />
    <Integer name="NewsRefreshIntervalSeconds" label="=newsRefreshIntervalSeconds" />
    <Integer name="LoadingStateDelayMillis" label="=loadingStateDelayMillis" />

    <Relation name="UiTheme" relation="UiThemes" label="=uiTheme" />

    <String name="TasksMailingTime" precision="10" label="=crmMailTasksSummary" />

    <Text name="Style" label="=style" />

    <Boolean name="MenuHide" />
    <Boolean name="ShowNewMessagesNotifier" label="=showNewMessagesNotifier" />
    <Boolean name="Assistant" label="=assistant" />

    <Integer name="ShowGridFilterCommand" label="=showGridFilterCommand" />
  </Fields>
</Table>
