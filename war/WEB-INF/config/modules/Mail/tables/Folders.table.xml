<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="Folders"
  idName="FolderID"
  >
  <Fields>
    <Relation name="Account" relation="Accounts" notNull="true" cascade="DELETE" label="=mailAccount" />
    <Relation name="Parent" relation="Folders" cascade="DELETE" />
    <String name="Name" precision="100" notNull="true"  label="=mailName"/>
    <Long name="UIDValidity" />
  </Fields>

  <Constraints>
    <Unique fields="Account Parent Name" />
  </Constraints>
</Table>
