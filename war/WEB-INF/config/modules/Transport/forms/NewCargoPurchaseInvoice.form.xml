<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY lbl "width:135px; text-align: right; padding-right: 9px;">
  <!ENTITY lbl2 "text-align: right; padding-right: 9px;">
  <!ENTITY separator "<hr style=&#34; background-color: red; color: red; height: 1px;&#34;/>">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="NewCargoPurchaseInvoice" viewName="CargoPurchaseInvoices" caption="=trNewCargoPurchaseInvoice"
  width="650" height="450"
  >
  <FlowPanel style="padding: 1px 1px 1px 1px;">
    <Table style="border-spacing: 5px;">
	  <row >
		<cell colSpan="4">
		  &separator;
		</cell>
	  </row>
      <row>
        <Label text="=trdDate" class="bee-required" style="&lbl;" />
        <InputDateTime source="Date" style="width:130px;" />

        <Label text="=orderNumber" style="&lbl;" />
        <InputText source="Number" />
      </row>
      <row>
	    <cell colSpan="4">
	      <Table style="border-spacing: 0px;">
		    <row>
			  <Label text="=currency" class="bee-required" style="&lbl;" />
			  <DataSelector source="CurrencyName" style="width:5em;" editEnabled="false" />
			  <Label text="=trdInvoicePrefix" style="&lbl2; width:105px" />
			  <InputText source="InvoicePrefix" upperCase="true" style="width:11em" />
		      <InlineLabel text="=trdInvoiceNo" style="&lbl2; margin-left: 5px;" />
			  <InputText source="InvoiceNo" />
		    </row>
		  </Table>
	    </cell>
      </row>
	  <row>
	    <Label text="=trdTerm" style="&lbl;" />
		<InputDate source="Term" />
	    <Label name="MainItemCaption" text="=transportMainItemCaption" style="&lbl; min-width:160px; padding-right: 12px"/>
	    <UnboundSelector name="MainItem" viewName="Items" renderColumns="Name" />
      </row>

	   <row>
         <Label text="=trdSupplier" class="bee-required" style="&lbl;" />
         <DataSelector source="Supplier" required="true" renderColumns="SupplierName SupplierTypeName"
            choiceColumns="Name TypeName" />
         <Label text="=trdCustomer" style="&lbl; min-width:160px;" />
         <DataSelector source="Customer" renderColumns="CustomerName CustomerTypeName" 
            choiceColumns="Name TypeName"/>
       </row>
      <row>
        <Label text="=trdManager" style="&lbl;" />
        <DataSelector source="Manager" editSource="ManagerPerson" />
		<Label for="WarehouseTo" style="&lbl; min-width:160px;" />
		<DataSelector source="WarehouseTo" />
      </row>
    </Table>
  </FlowPanel>
</f:Form>
