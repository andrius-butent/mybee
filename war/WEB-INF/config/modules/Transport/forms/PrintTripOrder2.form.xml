<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
    <!ENTITY form "PrintTripOrder2">
    ]>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"
        xmlns:ui="http://www.butent.com/ui"

        name="&form;" caption="Koreguojantis įsakymas" disabledActions="save"
        width="70" widthUnit="%" height="90" heightUnit="%"
    >

  <FlowPanel class="bee-PrintableForm">
    <br />

    <Label html="KOREGUOJANTIS ĮSAKYMAS" style="text-align:center; font-weight:bold;" />
    <Label html="DĖL TARNYBINĖS KOMANDIRUOTĖS Į UŽSIENĮ"
           style="text-align:center; font-weight:bold;" />
    <br />

    <FlowPanel class="flexBox-horizontal-center">
      <HorizontalPanel>
        <TextLabel>
          <render>
            <ui:expression>new Date().toLocaleDateString()</ui:expression>
          </render>
        </TextLabel>
        <TextLabel>
          <renderToken source="TripNo" prefix="Nr. " />
        </TextLabel>
      </HorizontalPanel>
    </FlowPanel>

    <br />
    <br />

    <Label text="Įsakau:" style="margin-left:3em; font-weight:bold;" />
    <Label text="Priskaityti komandiruotės išlaidas tolimųjų reisų vairuotojui "
           style="margin-left:3em; display:inline;" />
    <Label name="CurrentDriver" style="display:inline;" />
    <TextLabel>
      <renderToken source="DateFrom" prefix="nuo " />
      <renderToken source="PlannedEndDate" prefix=" iki " />
    </TextLabel>
    <HorizontalPanel>
      <Label text="Komandiruotės tikslas: " style="font-weight:bold;" />
      <TextLabel>
        <renderToken source="TripNo" prefix="Krovinių pervežimas. Kelionės lapo nr. " />
      </TextLabel>
    </HorizontalPanel>
    <HorizontalPanel>
      <Label text="Vilkiko ir puspriekabės numeriai " />
      <TextLabel>
        <renderToken source="VehicleNumber" />
        <renderToken source="TrailerNumber" prefix=", " />
      </TextLabel>
    </HorizontalPanel>

    <br />

    <Label text="Komandiruotės vietos ir trukmė dienomis:" style="font-weight:bold;" />
    <Label name="DailyCosts" />

    <br />

    <Label text="Suskaičiuotos apmokėti komandiruotės išlaidos:" style="font-weight:bold;" />
    <HorizontalPanel>
      <Label text="Dienpinigiai " />
      <Label name="DailyCostsTotal" />
    </HorizontalPanel>

    <br />

    <Label text="Atlyginamos komandiruotės metu patirtos išlaidos, jeigu pateikiami jas
    pagrindžiantys dokumentai, kurie atitinka 2001-01-20 Nr.IX-675 Lietuvos Respublikos pelno
    mokesčio įstatymo 11 str. 4-5-6 dalių reikalavimus." />
    <Label text="Išmokėti komandiruotės išlaidas vadovaujantis Bendrovėje patvirtinta atsiskaitymų
    su atskaitingais asmenimis tvarka." style="font-weight:bold;" />

    <br />
    <br />

    <Table style="text-align:center; white-space:nowrap;">
      <row>
        <Label text="Direktorius arba įgaliotas asmuo" style="text-align:left;" />
        <Label name="User" style="padding:0 2em 0 2em;" />
        <cell rowSpan="2" style="width:100%;">
          <text />
        </cell>
      </row>
      <row>
        <text />
        <cell style="border-top: 1px solid black; font-size:x-small;">
          <Label text="(vardas, pavardė)" />
        </cell>
        <cell style="border-top: 1px solid black; font-size:x-small;">
          <Label text="(parašas)" style="width:15em;" />
        </cell>
      </row>
    </Table>
  </FlowPanel>
</f:Form>