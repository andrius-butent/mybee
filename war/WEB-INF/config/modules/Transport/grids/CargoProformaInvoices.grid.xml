<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"

  name="CargoProformaInvoices" viewName="CargoInvoices"
  editShowId="true" flexGrow="1"
  disabledActions="add edit"
  caption="=trProformaInvoices"
  filter="Sale AND Proforma"
  >
  <g:columns>
    <IdColumn name="ID" caption="=trdInvoiceId" />
    <DataColumn name="Date" />
    <DataColumn name="Number" />
    <DataColumn name="InvoiceNo" searchBy="InvoicePrefix InvoiceNo">
      <render>
        <ui:function>
          if (!row.InvoicePrefix) {
            return row.InvoiceNo;
          } else if(!row.InvoiceNo) {
            return row.InvoicePrefix;
          } else {
            return row.InvoicePrefix + " " + row.InvoiceNo;
          }
        </ui:function>
      </render>
    </DataColumn>
    <DataColumn name="CustomerName" caption="=trdCustomer" />
    <DataColumn name="PayerName" caption="=trdPayer" />
    <DataColumn name="Amount" />
    <DataColumn name="CurrencyName" />
    <DataColumn name="Term" />

    <DataColumn name="Vehicle" />
    <DataColumn name="Driver" />
  </g:columns>
</g:Grid>
