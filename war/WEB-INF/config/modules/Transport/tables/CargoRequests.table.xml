<?xml version="1.0" encoding="UTF-8"?>
<Table xmlns="http://www.butent.com/table"

  name="CargoRequests"
  idName="CargoRequestID"
  >
  <Fields>
    <DateTime name="Date" notNull="true" defExpr="CURRENT_TIME" label="=trRequestDate" />
    <Enum name="Status" key="CargoRequestStatus" notNull="true" defValue="0" label="=trRequestStatus" />

    <Relation name="User" relation="Users" cascade="DELETE" notNull="true" defExpr="CURRENT_USER"
      label="=trRequestCustomer" />

    <Relation name="Expedition" relation="ExpeditionTypes" notNull="true"
      label="=trRequestExpeditionType" />
  
    <Date name="DeliveryDate" label="=trRequestDeliveryDate" />
    <String name="DeliveryTime" precision="10" label="=trRequestDeliveryTime" />
    <String name="TermsOfDelivery" precision="30" label="=trRequestTermsOfDelivery" />
    
    <Boolean name="CustomsBrokerage" label="=trRequestCustomsBrokerage" />
    <Boolean name="FreightInsurance" label="=trRequestFreightInsurance" />

    <Relation name="Cargo" relation="OrderCargo" cascade="DELETE" label="=cargo" />

    <Relation name="Manager" relation="Users" label="=trRequestResponsibleManager" />

    <Enum name="Interface" key="UserInterface" />

    <Text name="Notes" label="=trRequestNotes" />
  </Fields>
</Table>