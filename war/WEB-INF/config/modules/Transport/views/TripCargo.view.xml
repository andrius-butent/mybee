<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

  name="TripCargo"
  source="CargoTrips"
  >
  <Columns>
    <SimpleColumn name="Trip"/>
    <SimpleColumn name="Ordinal" />
    <SimpleColumn name="CargoPercent" />
    <SimpleColumn name="Message" />

    <SimpleColumn name="Cargo" />
    <SimpleJoin joinType="LEFT" name="Cargo">
      <SimpleColumn name="Order" />
      <SimpleJoin name="Order" joinType="LEFT">
        <SimpleColumn name="OrderNo" />
      </SimpleJoin>

      <SimpleColumn name="Description" />
      <SimpleColumn name="Weight" />
      <SimpleColumn name="Volume" />
      <SimpleColumn name="Quantity" />
      <SimpleColumn name="Number" />

      <SimpleColumn name="Cmr" />
      <SimpleJoin name="Cmr" joinType="LEFT">
        <SimpleColumn name="Name" alias="CmrName"/>
        <SimpleColumn name="Number" alias="CmrNumber"/>
      </SimpleJoin>

      <SimpleColumn name="Notes" />

      <SimpleJoin name="LoadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="LoadingDate" label="=trLoadingDate" />
        <SimpleColumn name="Number" alias="LoadingNumber" label="=trLoadingNumber" />
        <SimpleColumn name="Contact" alias="LoadingContact" label="=trLoadingContact" />
        <SimpleColumn name="Company" alias="LoadingCompany" label="=trLoadingCompany" />
        <SimpleColumn name="Address" alias="LoadingAddress" label="=trLoadingAddress" />
        <SimpleColumn name="PostIndex" alias="LoadingPostIndex" label="=trLoadingPostIndex" />

        <SimpleJoin joinType="LEFT" name="City">
          <SimpleColumn name="Name" alias="LoadingCityName" />
        </SimpleJoin>
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Name" alias="LoadingCountryName" />
          <SimpleColumn name="Code" alias="LoadingCountryCode" />
        </SimpleJoin>
      </SimpleJoin>

      <SimpleJoin name="UnloadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="UnloadingDate" label="=trUnloadingDate" />
        <SimpleColumn name="Number" alias="UnloadingNumber" label="=trUnloadingNumber" />
        <SimpleColumn name="Contact" alias="UnloadingContact" label="=trUnloadingContact" />
        <SimpleColumn name="Company" alias="UnloadingCompany" label="=trUnloadingCompany" />
        <SimpleColumn name="Address" alias="UnloadingAddress" label="=trUnloadingAddress" />
        <SimpleColumn name="PostIndex" alias="UnloadingPostIndex" label="=trUnloadingPostIndex" />

        <SimpleJoin joinType="LEFT" name="City">
          <SimpleColumn name="Name" alias="UnloadingCityName" />
        </SimpleJoin>
        <SimpleJoin joinType="LEFT" name="Country">
          <SimpleColumn name="Name" alias="UnloadingCountryName" />
          <SimpleColumn name="Code" alias="UnloadingCountryCode" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>
  </Columns>
  <Order>
    <OrderBy column="Ordinal" />
    <OrderBy column="LoadingDate" />
    <OrderBy column="UnloadingDate" />
  </Order>
</View>
