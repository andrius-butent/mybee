<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"

      name="AssessmentTransportationReport" source="Trips"
      filter="!(AssessmentForwarder)" caption="=carriersReport"
>
  <Columns>
    <SimpleColumn name="TransportationPrice" />
    <SimpleJoin joinType="LEFT" name="TransportationCurrency">
      <SimpleColumn name="Name" alias="TransportationCurrencyName" />
    </SimpleJoin>

    <SimpleJoin joinType="LEFT" name="Forwarder">
      <SimpleColumn name="Name" alias="ForwarderName" label="=carrier" />
    </SimpleJoin>

    <ExternalJoin name="Trip" source="AssessmentForwarders" joinType="LEFT">
      <HiddenColumn name="Trip" alias="AssessmentForwarder" />
    </ExternalJoin>

    <ExternalJoin name="Trip" source="CargoTrips" joinType="INNER">
      <IdColumn name="CargoTrip" />
      <SimpleJoin name="Cargo" joinType="INNER">
        <ExternalJoin name="Cargo" source="Assessments" joinType="INNER">
          <IdColumn name="Assessment" />

          <ExternalJoin name="Assessment" source="AssessmentForwarders" joinType="LEFT">
            <SimpleJoin name="CargoExpense" joinType="LEFT">
              <SimpleColumn name="Amount" />

              <SimpleJoin joinType="LEFT" name="Currency">
                <SimpleColumn name="Name" alias="CurrencyName" />
              </SimpleJoin>

              <SimpleColumn name="Purchase" />
              <SimpleJoin name="Purchase" joinType="LEFT">
                <SimpleColumn name="InvoicePrefix" />
                <SimpleColumn name="InvoiceNo" />
              </SimpleJoin>
            </SimpleJoin>
          </ExternalJoin>
        </ExternalJoin>

        <SimpleColumn name="Description" />
        <SimpleColumn name="Partial" />

        <SimpleColumn name="Weight" />
        <SimpleJoin joinType="LEFT" name="WeightUnit">
          <SimpleColumn name="Name" alias="WeightUnitName" />
        </SimpleJoin>

        <SimpleColumn name="Volume" />
        <SimpleJoin joinType="LEFT" name="VolumeUnit">
          <SimpleColumn name="Name" alias="VolumeUnitName" />
        </SimpleJoin>

        <SimpleColumn name="Quantity" />
        <SimpleJoin joinType="LEFT" name="QuantityUnit">
          <SimpleColumn name="Name" alias="QuantityUnitName" />
        </SimpleJoin>

        <SimpleJoin name="Order" joinType="INNER">
          <SimpleColumn name="Notes" alias="OrderNotes" label="=route" />

          <SimpleJoin joinType="LEFT" name="Customer">
            <SimpleColumn name="Name" alias="CustomerName" label="=customer" />
          </SimpleJoin>
        </SimpleJoin>
      </SimpleJoin>
    </ExternalJoin>
  </Columns>
</View>
