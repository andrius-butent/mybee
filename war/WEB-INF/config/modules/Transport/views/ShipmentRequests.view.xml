<?xml version="1.0" encoding="UTF-8"?>
<View xmlns="http://www.butent.com/view"
  xmlns:x="http://www.butent.com/expression"

  name="ShipmentRequests" source="ShipmentRequests" module="Transport.SelfService"
  caption="=trRequestsUnregistered" newRowCaption="=trRequestUnregisteredNew"
  newRowForm="ShipmentRequest" editForm="ShipmentRequest"
  >
  <Columns>
    <SimpleColumn name="Date" />
    <SimpleColumn name="Status" />

    <SimpleColumn name="CustomerName" />
    <SimpleColumn name="CustomerCode" />
    <SimpleColumn name="CustomerVatCode" />

    <SimpleColumn name="CustomerAddress" />
    <SimpleColumn name="CustomerPhone" />
    <SimpleColumn name="CustomerEmail" />

    <SimpleColumn name="CustomerContact" />
    <SimpleColumn name="CustomerContactPosition" />

    <SimpleColumn name="CustomerExchangeCode" />

    <SimpleColumn name="LoadingEmail" />
    <SimpleColumn name="LoadingCity" />

    <SimpleColumn name="UnloadingEmail" />
    <SimpleColumn name="UnloadingCity" />

    <SimpleColumn name="Expedition" />
    <SimpleJoin name="Expedition" joinType="LEFT">
      <SimpleColumn name="Name" alias="ExpeditionType" />
    </SimpleJoin>

    <SimpleColumn name="DeliveryDate" />
    <SimpleColumn name="DeliveryTime" />
    <SimpleColumn name="TermsOfDelivery" />

    <SimpleColumn name="CustomsBrokerage" />
    <SimpleColumn name="FreightInsurance" />

    <SimpleColumn name="Cargo" />
    <SimpleJoin name="Cargo" joinType="LEFT">
      <SimpleColumn name="Order" editable="true" />
      <SimpleJoin name="Order" joinType="LEFT">
        <SimpleColumn name="OrderNo" />
      </SimpleJoin>

      <SimpleJoin name="LoadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="LoadingDate" label="=trLoadingDate" editable="true" />

        <SimpleColumn name="Company" alias="LoadingCompany" label="=trLoadingCompany"
          editable="true" />
        <SimpleColumn name="Contact" alias="LoadingContact" label="=trLoadingContact"
          editable="true" />
        <SimpleColumn name="Address" alias="LoadingAddress" label="=trLoadingAddress" 
          editable="true" />

        <SimpleColumn name="Phone" alias="LoadingPhone" editable="true" label="=trLoadingPhone" />
        <SimpleColumn name="Fax" alias="LoadingFax" editable="true" label="=trLoadingFax" />
        <SimpleColumn name="Number" alias="LoadingNumber" editable="true" 
          label="=trLoadingNumber" />
      </SimpleJoin>

      <SimpleJoin name="UnloadingPlace" joinType="LEFT">
        <SimpleColumn name="Date" alias="UnloadingDate" label="=trUnloadingDate" editable="true" />

        <SimpleColumn name="Company" alias="UnloadingCompany" label="=trUnloadingCompany"
          editable="true" />
        <SimpleColumn name="Contact" alias="UnloadingContact" label="=trUnloadingContact"
          editable="true" />
        <SimpleColumn name="Address" alias="UnloadingAddress" label="=trUnloadingAddress" 
          editable="true" />

        <SimpleColumn name="Phone" alias="UnloadingPhone" editable="true" 
          label="=trUnloadingPhone" />
        <SimpleColumn name="Fax" alias="UnloadingFax" editable="true" label="=trUnloadingFax" />
        <SimpleColumn name="Number" alias="UnloadingNumber" editable="true" 
          label="=trUnloadingNumber" />
      </SimpleJoin>

      <SimpleColumn name="Description" alias="CargoDescription" editable="true" 
        label="=trRequestCargoDescription"/>
      <SimpleColumn name="Quantity" editable="true" label="=trRequestCargoQuantity" />

      <SimpleColumn name="Weight" editable="true" label="=trRequestCargoWeight" />
      <SimpleColumn name="Volume" editable="true" label="=trRequestCargoVolume" />
      <SimpleColumn name="LDM" editable="true" label="=trRequestCargoLdm" />
      <SimpleColumn name="Length" editable="true" label="=trRequestCargoLength" />
      <SimpleColumn name="Width" editable="true" label="=trRequestCargoWidth" /> 
      <SimpleColumn name="Height" editable="true" label="=trRequestCargoHeight" />

      <SimpleColumn name="Palettes" editable="true" label="=trRequestCargoPalettes" />

      <SimpleColumn name="Value" editable="true" label="=trRequestCargoValue" />
      <SimpleColumn name="ValueCurrency" editable="true" label="=trRequestCargoCurrency" />
      <SimpleJoin joinType="LEFT" name="ValueCurrency">
        <SimpleColumn name="Name" alias="ValueCurrencyName" />
      </SimpleJoin>

      <SimpleColumn name="ShippingTerm" editable="true" label="=trRequestShippingTerms" />
      <SimpleJoin joinType="LEFT" name="ShippingTerm">
        <SimpleColumn name="Name" alias="ShippingTermName" />
        <SimpleColumn name="Description" alias="ShippingTermDescription" />
      </SimpleJoin>
    </SimpleJoin>

    <SimpleColumn name="Manager" />
    <SimpleJoin name="Manager" joinType="LEFT">
      <SimpleColumn name="CompanyPerson" alias="ManagerPerson" />
      <SimpleJoin name="CompanyPerson" joinType="LEFT">
        <SimpleJoin name="Person" joinType="LEFT">
          <SimpleColumn name="FirstName" alias="ManagerFirstName" />
          <SimpleColumn name="LastName" alias="ManagerLastName" />
        </SimpleJoin>
      </SimpleJoin>
    </SimpleJoin>

    <SimpleColumn name="Notes" />
    <SimpleColumn name="Host" />
    <SimpleColumn name="Agent" />
    <SimpleColumn name="Interface" />
  </Columns>
  
  <Order>
    <OrderBy column="LoadingDate" />
  </Order>
</View>
