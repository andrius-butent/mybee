<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inp "width: 15em;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"
  
  name="TodoItem" viewName="TodoList" caption="=crmTodoItem" showRowId="true"
  width="700" height="400"
  >
  <FlowPanel>
    <Table style="margin-top: 2ex; margin-left: 1em;">

      <col index="0" kind="label" />
      <col index="2" kind="label" />

      <row>
        <Label for="Summary" visible="true" />
        <cell verticalAlignment="top">
          <InputText source="Summary" style="&inp;"
            visible="true" />
        </cell>

        <Label for="Description" />
        <InputArea source="Description" style="&inp; height: 60px;" />
      </row>

      <row module="Classifiers.Contacts">
        <Label for="Company" />
        <DataSelector source="Company" renderColumns="CompanyName CompanyTypeName" choiceColumns="Name TypeName" style="&inp;" />

        <Label for="Contact" />
        <DataSelector source="Contact" newRowEnabled="false" style="&inp;"
          renderColumns="ContactFirstName ContactLastName"
          choiceColumns="FirstName LastName CompanyName" options="Company" />
      </row>

      <row>
        <Label for="StartTime" />
        <InputDateTime source="StartTime" />

        <Label for="FinishTime" />
        <InputDateTime source="FinishTime" />
      </row>

      <row>
        <Label for="ExpectedDuration" />
        <InputTime source="ExpectedDuration" step="30" style="width: 60px;" />
        <Label text="=calVisibility" />
        <cell colSpan="2">
          <Radio source="Visibility" vertical="false" />
        </cell>
      </row>

      <row>
        <Label for="Created" />
        <InputDateTime source="Created" />

        <Label for="Creator" />
        <DataSelector source="Creator" editSource="CreatorCompanyPerson"
          renderColumns="CreatorFirstName CreatorLastName" style="&inp;"/>
      </row>
    </Table>
  </FlowPanel>
</f:Form>
