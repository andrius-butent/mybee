<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"

        name="ConfOption" viewName="ConfOptions" caption="=option" height="400" width="700"
>
  <Table kind="controls">
    <col index="0" kind="label" />
    <col index="2" kind="label" />
    <row>
      <Label for="Group" />
      <DataSelector source="Group" renderColumns="TypeName GroupName" />

      <Label for="Description" />
      <cell rowSpan="4">
        <InputArea source="Description" visibleLines="10" style="width:300px;" />
      </cell>
    </row>
    <row>
      <Label for="OptionName" />
      <InputText source="OptionName" />
    </row>
    <row>
      <Label for="Code" />
      <InputText source="Code" />
    </row>
    <row>
      <Label for="Code2" />
      <InputText source="Code2" />
    </row>
    <row>
      <Label for="Item" />
      <DataSelector source="Item" newRowEnabled="false" />
      <text />
      <CheckBox source="Blocked" />
    </row>
    <row>
      <Label for="PhotoFile" />
      <cell rowSpan="2" colSpan="3">
        <Image name="PhotoFile" />
      </cell>
    </row>
    <row>
      <FlowPanel>
        <Label for="PhotoCode" />
        <ListBox source="PhotoCode">
          <item>LOGO</item>
          <item>MAIN</item>
        </ListBox>
      </FlowPanel>
    </row>
    <row>
      <Label for="OptionName2" />
      <cell colSpan="3">
        <InputText source="OptionName2" style="width:100%;" />
      </cell>
    </row>
    <row>
      <Label text="=packet" data="ConfPacketOptions" />
      <cell colSpan="3">
        <ChildSelector childTable="ConfPacketOptions" targetRelColumn="Packet"
                       viewName="ConfOptions" sourceRelColumn="Option" newRowEnabled="false"
                       style="width:100%;" choiceColumns="Code Code2 OptionName GroupName TypeName"
                       renderColumns="Code Code2 OptionName" label="=packet"
                       data="ConfPacketOptions" />
      </cell>
    </row>
  </Table>
</f:Form>
