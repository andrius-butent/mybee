<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  xmlns:ui="http://www.butent.com/ui"
  
  name="RelatedDocuments" viewName="RelatedDocuments" newRowColumns="-"
  flexGrow="1" caption="=documents"
  >
  
  <g:columns>
    <DataColumn name="Name" visible="true" />
    <DataColumn name="DocumentDate" />
    <DataColumn name="Expires" />
    <DataColumn name="Number" />
    <DataColumn name="CategoryName" caption="=documentCategory" />
    <DataColumn name="TypeName" />
    <DataColumn name="PlaceName" />
    <DataColumn name="StatusName" />

    <IdColumn name="Id" visible="false" />
    <DataColumn name="RegistrationNumber" visible="false" />
    <DataColumn name="Received" visible="false" />
    <DataColumn name="Sent" visible="false" />
    <DataColumn name="Description" visible="false" />
  </g:columns>
  
  <g:rowStyle>
    <ui:inline>="font-weight: bolder"</ui:inline>
    <ui:expression>row.Document == row.ProjectContract</ui:expression>
  </g:rowStyle>
  
</g:Grid>