<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"

  name="AppointmentTypes" viewName="AppointmentTypes"
  caption="=calAppointmentTypes"
  >
  <g:body height="100" /> 
  <g:columns>
    <DataColumn name="Name" visible="true" />
    <DataColumn name="Description" whiteSpace="pre-line" />

    <RelColumn name="Theme" renderColumns="ThemeName" />
    <RelColumn name="Style" renderColumns="StyleName" />

    <DataColumn name="SimpleHeader" whiteSpace="pre-wrap" />
    <DataColumn name="SimpleBody" whiteSpace="pre-wrap" />

    <DataColumn name="MultiHeader" whiteSpace="pre-wrap" />
    <DataColumn name="MultiBody" whiteSpace="pre-wrap" />
   
    <DataColumn name="AppointmentCompact" whiteSpace="pre-wrap" />
    <DataColumn name="AppointmentTitle" whiteSpace="pre-wrap" />

    <DataColumn name="AppointmentCreator" />
    <DataColumn name="AppointmentEditor" />
    <DataColumn name="PlannedDuration">
      <editor type="time" />
    </DataColumn>
  </g:columns>
</g:Grid>
