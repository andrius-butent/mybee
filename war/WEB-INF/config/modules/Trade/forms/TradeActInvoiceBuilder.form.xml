<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form[
  <!ENTITY br '<div style="height: 2&#37;;" />'>
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  
  name="TradeActInvoiceBuilder" caption="=taInvoiceBuilder"
  enabledActions="refresh"
  >
  <FlowPanel class="flexBox-vertical">
    &br;
    <Table kind="controls">
      <col index="0" kind="label" />
      <col index="2" kind="label" />
      <col index="4" kind="label" />
      
      <row>
        <Label text="=dateFrom" class="bee-required" />
        <InputDate name="DateFrom" style="width: 150px;" required="true" />
    
        <Label text="=dateTo" class="bee-required" />
        <InputDate name="DateTo" style="width: 150px;" required="true" />

        <Label text="=taSeries" />
        <UnboundSelector name="Series" viewName="TradeSeries" renderColumns="SeriesName"
                         newRowEnabled="false" style="width: 150px;" />

        <CheckBox name="AllActs" text="=tradeActsAll" style="margin-left: 10px;" />
      </row>
      
      <row>
        <Label text="=client" class="bee-required" />
        <UnboundSelector name="Company" viewName="Companies" renderColumns="Name TypeName"
                         style="width: 200px;" required="true" newRowEnabled="false"
                         caching="none" />

        <Label text="=object" />
        <UnboundSelector name="Object" viewName="CompanyObjects" renderColumns="ObjectName"
                         newRowEnabled="false" style="width: 150px;" />

        <Label text="=manager" />
        <UnboundSelector name="Manager" viewName="Users" renderColumns="FirstName LastName"
                         newRowEnabled="false" style="width: 150px;" />
      </row>

      <row>
        <Label text="=trdSeriesLong" class="bee-required" />
        <UnboundSelector name="SaleSeries" viewName="SaleSeries"  renderColumns="SeriesName" upperCase="true" style="width: 100px;" />

        <Label text="=currency" />
        <UnboundSelector name="Currency" viewName="Currencies" renderColumns="Name" 
          style="width: 5em;" newRowEnabled="false" />
      </row>
    </Table>
    
    &br;
    <FlowPanel name="TradeActs" style="overflow: auto; min-height: 10%; max-height: 30%;" />
    &br;
    <FlowPanel name="TradeActServices" class="flexible" style="overflow: auto;" />
    &br;
  </FlowPanel>
</f:Form>
